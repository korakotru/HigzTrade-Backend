{
  "ConnectionStrings": {
    "Database": "Server=localhost,1433;Database=higz_trade ;User Id=sa;Password=Test@1234;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information", // 1. ระดับเริ่มต้น: เก็บทุกอย่างตั้งแต่ระดับ Debug ขึ้นไป (Debug, Info, Warn, Error, Fatal)
      "Override": {
        "Microsoft": "Warning", // 2. ยกเว้น Microsoft: ถ้าเป็น Log จากตัว .NET เอง (เช่น Entity Framework)   ให้เอาแค่ Warning ขึ้นไปพอ  
        "System": "Warning" // 3. ยกเว้น System: ระบบภายในถ้าไม่เตือน (Warning) ก็ไม่ต้องบอก 
      }
    },
    "WriteTo": [
      //{
      //  "Name": "Console", // 1. พ่นลงหน้าจอ Console 
      //  "Args": {
      //    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
      //  }
      //},
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          //"apiKey": "your-api-key-here",
          "restrictedToMinimumLevel": "Debug" //Information
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/higz-trade-.clef", // 5. เก็บลงไฟล์: ชื่อไฟล์จะตามด้วยวันที่ (เพราะมี rollingInterval)
          "rollingInterval": "Day", // 6. ตัดไฟล์ทุกวัน: พอขึ้นวันใหม่ มันจะสร้างไฟล์ใหม่ให้เอง ไม่ต้องกลัวไฟล์ใหญ่จนเปิดไม่ได้
          "fileSizeLimitBytes": 10485760, // 10 MB ต่อไฟล์
          "rollOnFileSizeLimit": true, // ถ้าเกิน 10MB ให้ตัดไฟล์ใหม่ทันที
          "retainedFileCountLimit": 7, //ลบไฟล์เก่าทิ้งเมื่อเก็บไว้ครบกำหนด (7 คือ 7 วันล่าสุด)
          //"formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog" //เปลี่ยน Format เป็น JSON เพื่อให้เปิด Log จากโปรแกรมวิเคราะห์ต่อได้เช่น SL
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "ApplicationName": "HigzTrade.TradeApi",
      "Environment": "Development"
    }
  }
}
